# Maintainer: Florian Mayer <florian[dot]andrefranc[dot]mayer[at]fau[dot]de>
# Adopted from boost-libs. Mainainer: Levente Polyak <anthraxx[at]archlinux[dot]org>
pkgbase=boost
pkgname=('boost-65-compat')
pkgver=1.65.0
_boostver=${pkgver//./_}
pkgrel=1
url='http://www.boost.org/'
arch=('x86_64')
license=('custom')
makedepends=('icu' 'python' 'python2' 'python-numpy' 'python2-numpy' 'bzip2' 'zlib' 'openmpi')
source=(https://downloads.sourceforge.net/project/${pkgbase}/${pkgbase}/${pkgver}/${pkgbase}_${_boostver}.tar.bz2)
sha256sums=('ea26712742e2fb079c2a566a31f3266973b76e38222b9f88b387e3c8b2f9902c')
OPTIONS=(!strip)


build() {
   export _stagedir="${srcdir}/stagedir"
   local JOBS="$(sed -e 's/.*\(-j *[0-9]\+\).*/\1/' <<< ${MAKEFLAGS})"
   cd ${pkgbase}_${_boostver}
   ./bootstrap.sh --with-toolset=gcc --with-icu --with-python=/usr/bin/python2.7
   _bindir="bin.linuxx86"
   [[ "${CARCH}" = "x86_64" ]] && _bindir="bin.linuxx86_64"
   install -Dm755 tools/build/src/engine/$_bindir/b2 "${_stagedir}"/bin/b2
   # default "minimal" install: "release link=shared,static
   # runtime-link=shared threading=single,multi"
   # --layout=tagged will add the "-mt" suffix for multithreaded libraries
   # and installs includes in /usr/include/boost.
   # --layout=system no longer adds the -mt suffix for multi-threaded libs.
   # install to ${_stagedir} in preparation for split packaging
   "${_stagedir}"/bin/b2 \
                 -j16 \
      variant=release \
      debug-symbols=off \
      threading=multi \
      runtime-link=shared \
      link=shared,static \
      toolset=gcc \
      python=2.7 \
      cflags="${CPPFLAGS} ${CFLAGS} -fPIC -O3" \
      cxxflags="${CPPFLAGS} ${CXXFLAGS} -std=c++14 -fPIC -O3" \
      linkflags="${LDFLAGS}" \
      --layout=system \
      ${JOBS} \
      \
      --prefix="${_stagedir}" \
      install
}

package_boost-65-compat() {
   export _stagedir="${srcdir}/stagedir"
   echo ${_stagedir}
   cd ${_stagedir}
   pkgdesc='Free peer-reviewed portable C++ source libraries - development headers'
   #depends=("boost-65-compat-libs=${pkgver}")
   optdepends=('python: for python bindings'
               'python2: for python2 bindings')
   options=('staticlibs')
   local PREFIX="/opt/boost/1.65.0"
   install -dm755 "${pkgdir}"/$PREFIX
   cp -a "${_stagedir}"/{bin,include} "${pkgdir}"/$PREFIX/
   install -dm755 "${pkgdir}"/$PREFIX
   cp -a "${_stagedir}"/lib "${pkgdir}"/$PREFIX/
   rm "${pkgdir}"/$PREFIX/lib/*.a
}
